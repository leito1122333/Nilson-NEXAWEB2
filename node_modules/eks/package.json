{
  "name": "eks",
  "version": "0.7.0",
  "description": "A series of Vue components.",
  "main": "dist/eks.common.js",
  "module": "dist/eks.esm.js",
  "browser": "dist/eks.js",
  "style": "dist/eks.css",
  "license": "MIT",
  "repository": "xkeshi/eks",
  "homepage": "https://xkeshi.github.io/eks",
  "author": {
    "name": "Chen Fengyuan",
    "email": "chenfengyuan@outlook.com",
    "url": "http://chenfengyuan.com"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "eks",
    "vue",
    "vue-component",
    "components",
    "ui",
    "framework",
    "web",
    "front-end"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:css": "postcss src/index.css -o dist/eks.css --no-map",
    "build:docs": "webpack --env.minify --config ../../webpack.config.js",
    "build:js": "webpack --env.production --config ../../webpack.config.js",
    "clear": "rimraf dist",
    "clear:docs": "rimraf ../../docs",
    "compress": "npm run compress:js && npm run compress:css",
    "compress:css": "postcss dist/eks.css -u cssnano -o dist/eks.min.css --no-map",
    "compress:js": "webpack --env.production --env.minify --config ../../webpack.config.js",
    "deploy": "npm run lint:docs && npm run clear:docs && npm run build:docs",
    "dev": "webpack-dev-server --config ../../webpack.config.js",
    "lint": "npm run lint:es && npm run lint:ts",
    "lint:docs": "eslint docs --ext .js,.vue --fix",
    "lint:es": "eslint src test --ext .js,.vue --fix",
    "lint:ts": "tslint src/**/*.ts --fix",
    "postbuild": "npm run compress",
    "prebuild": "npm run clear",
    "release": "npm run lint && npm run build && npm run deploy && npm test",
    "start": "npm run dev",
    "test": "karma start ../../karma.config.js"
  },
  "devDependencies": {
    "eks-alert": "^0.1.0",
    "eks-badge": "^0.1.0",
    "eks-breadcrumb": "^0.1.0",
    "eks-button": "^0.1.0",
    "eks-card": "^0.1.0",
    "eks-carousel": "^0.1.0",
    "eks-cascader": "^0.1.0",
    "eks-checkbox": "^0.1.0",
    "eks-col": "^0.1.0",
    "eks-collapse": "^0.1.0",
    "eks-container": "^0.1.0",
    "eks-dropdown": "^0.1.0",
    "eks-icon": "^0.1.0",
    "eks-input": "^0.1.0",
    "eks-loading": "^0.1.0",
    "eks-number-input": "^0.1.0",
    "eks-popover": "^0.1.0",
    "eks-progress": "^0.1.0",
    "eks-radio": "^0.1.0",
    "eks-rate": "^0.1.0",
    "eks-row": "^0.1.0",
    "eks-select": "^0.1.0",
    "eks-slider": "^0.1.0",
    "eks-step": "^0.1.0",
    "eks-switch": "^0.1.0",
    "eks-table": "^0.1.0",
    "eks-tag": "^0.1.0",
    "eks-textarea": "^0.1.0",
    "eks-theme-default": "^0.1.0",
    "eks-tooltip": "^0.1.0",
    "eks-tree": "^0.1.0",
    "eks-upload": "^0.1.0",
    "eks-utils": "^0.1.0"
  },
  "peerDependencies": {
    "vue": "^2.4.0"
  }
}
